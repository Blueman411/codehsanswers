speed(0)
brick_length = 400 / 6
brick_height = 25

def draw_brick():
    begin_fill()
    for i in range(2):
        forward(brick_length)
        left(90)
        forward(brick_height)
        left(90)
    end_fill()
    
penup()
backward(200)
pendown()

for i in range (2):
    color("Crimson")
    draw_brick()
    color("FireBrick")
    forward(400/6)
    draw_brick()
    color("DarkRed")
    forward(400/6)
    draw_brick()
forward(400/6)
color("Crimson")
draw_brick()
color("FireBrick")
