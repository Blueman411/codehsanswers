speed(0)
def draw_textbox(label, y_location):
    goto(-50, y_location)
    write(label, font=("Arial", 15, "bold"), align="right")
    pendown()
    for i in range(2):
        forward(200)
        left(90)
        forward(25)
        left(90)
    penup()
    goto(-40, y_location + 5)
    
def draw_availability(label, y_location):
    goto(60, y_location)
    write(label, font=("Arial", 15), align="right")
    pendown()
    for i in range(2):
        forward(50)
        left(90)
        forward(25)
        left(90)
    penup()
    goto(80, y_location + 5)
penup()
goto(0,120)
name = input("What is your name?")
pendown()
draw_textbox("NAME", 120)
forward(5)
write(name, font=("arial", 16))
penup()
goto(0,80)
date = input("What is the date?")
pendown()
draw_textbox("DATE", 80)
forward(5)
write(date, font=("arial", 16))
penup()
goto(0,40)
grade = input("What is your grade?")
pendown()
draw_textbox("GRADE", 40)
forward(5)
write(grade, font=("arial", 16))
penup()
right(90)
forward(40)
